{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": ".next",
  "github": {
    "enabled": true,
    "silent": false
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "skipBuildCache": true,
        "excludeFiles": ["**/test.ts", "**/test.js", "api/test.js", "pages/api/test.ts"],
        "includeFiles": ["pages/api/airtable-sync.ts", "lib/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/health"
    }
  ]
}
